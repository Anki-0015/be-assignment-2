<article class="single-post">
    <header class="post-header">
        <h1><%= post.title %></h1>
        <div class="post-meta">
            <span>By <%= post.author %></span>
            <span><%= formatDate(new Date(post.createdAt), 'MMMM d, yyyy') %></span>
            <span><%= post.readingTime %> min read</span>
        </div>
    </header>

    <div class="post-content">
        <%- post.processedContent %>
    </div>

    <nav class="post-navigation">
        <% if (prevPost) { %>
            <a href="/post?id=<%= prevPost.id %>" class="prev-post">
                &larr; <%= prevPost.title %>
            </a>
        <% } %>
        
        <% if (nextPost) { %>
            <a href="/post?id=<%= nextPost.id %>" class="next-post">
                <%= nextPost.title %> &rarr;
            </a>
        <% } %>
    </nav>
</article>